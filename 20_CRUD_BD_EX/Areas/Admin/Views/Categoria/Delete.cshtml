@model _20_CRUD_BD_EX.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-white fw-bold">Tem certeza de quer deletar esta categoria?</h1>
<div>
    <hr class="bg-white" />
    <dl class="row text-white">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form class="d-flex justify-content-center align-items-center gap-2" asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-info" asp-action="Index">Voltar para a lista</a>
    </form>
</div>
<hr class="bg-white" />
