@model IEnumerable<_20_CRUD_BD_EX.Models.Filme>

<h1 class="text-center text-white fw-bold mb-3">Cat√°logo de Filmes</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-lg-3 ">
            <div class="card border border-2 border-white bg-dark" >
                <img class="card-img-top img-fluid" src="@Html.DisplayFor(modelItem => item.Imagem)" alt="Imagem de capa do card">
                <div class="card-body text-center text-white">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                    <a href="#" class="btn btn-primary border border-2 border-white bg-black">Saiba mais</a>
                </div>
            </div>
        </div>

    }
</div>