                    <input type="submit" value="Entrar" class="btn btn-danger log" />
                </div>

            <div class="text-center">
                <a class="text-decoration-none fw-bold" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left"></i> Voltar</a>
            </div>
                
            </form>

</div>
