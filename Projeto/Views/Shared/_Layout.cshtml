<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Burger Master</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projeto.styles.css" asp-append-version="true" />
    @RenderSection("css", false)
</head>

<body>
    <header class="fixed-top">
        <nav class="navbar navbar-dark text-white bg-white navbar-expand-sm border-bottom">
            <div class="container">
                <a asp-area="" asp-controller="Home" asp-action="Index" id="Logo"
                    class="navbar-brand fw-bolder d-flex justify-content-center align-items-center gap-2">
                    Burger Master
                </a>
                <button class="navbar-toggler bg-danger" type="button" data-bs-toggle="collapse"
                    data-bs-target="#menuNavBar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="menuNavBar">

                    <div class="navbar-nav gap-3 justify-content-center align-items-center">
                        <a asp-area="" asp-controller="Home" asp-action="Index"
                            class="nav-link text-center text-dark">Início</a>
                        <a href="#" class="nav-link text-center text-dark nav-sobre">Sobre nós</a>
                        <a href="#" class="nav-link text-center text-dark nav-cardapio">Cardápio</a>
                        <a asp-area="" asp-controller="Login" asp-action="Index"
                                        class="text-black btn btn-outline-danger fw-bold fst-italic text-center">Entrar</a>
                    </div>
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="d-flex flex-sm-collumn footer1">

        <div class="left gap-5">

            <p class="fs-5 fw-semibold">Burger Master</p>

            <p>©2023 BurgerMaster</p>

            <p>All the rights reserved</p>

        </div>
        <div class="right gap-3">

            <a href="#" class="fs-3"><i class="bi bi-facebook text-white"></i></a>
            <a href="#" class="fs-3"><i class="bi bi-instagram text-white"></i></a>
            <a href="#" class="fs-3"><i class="bi bi-twitter text-white"></i></a>

        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
