@model Tarefa

<h1>Adicionar Nova Tarefa</h1>

<form asp-action="Adicionar">
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" class="form-control" id="Descricao" name="Descricao" placeholder="Digite a descrição"
            required>
    </div>
    <div class="form-group">
        <label for="Concluida">Concluída</label>
        <select class="form-control" id="Concluida" name="Concluida">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
    </div>

    <div class="text-center mt-3">
        <button class="btn btn-success" type="submit">Adicionar</button>
    </div>
    
</form>

<div class="text-center mt-3">
    <a asp-action="Index">Voltar para a Lista</a>
</div>
